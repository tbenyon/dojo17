<table class="form-table">
	<tbody>
	<tr id="password" class="user-pass1-wrap">
		<th><label for="pass1-text">{{ strings.title }}</label></th>
		<td>
			<fieldset>
				<legend class="screen-reader-text"><span>{{ strings.title }}</span></legend>
				<label for="_shield_suspend_user">
					<input name="{{ vars.form_field }}" type="checkbox" id="_shield_suspend_user" value="Y"
						   {% if vars.is_suspended %}checked="checked"{% endif %}>
					{{ strings.label }}</label>
				<p class="description">{{ strings.description }}</p>
			</fieldset>
		</td>
	</tr>
	</tbody>
</table>